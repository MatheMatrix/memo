#!/usr/bin/env python3

import unittest

from utils import *
from fake.gcs import GCS

class Test(unittest.TestCase):

  def test_route(self):
    with Beyond() as beyond:
      setattr(beyond.app, '_Bottle__gcs', FakeGCS())
      user = User()
      res = beyond.get('users/%s/avatar' % user['name'])
      assertEq(res.status_code, 303)

if __name__ == '__main__':
  unittest.main()
